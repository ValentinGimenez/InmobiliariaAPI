@model List<_net_integrador.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Volver</a>

        <h2>Listado de Usuarios</h2>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Agregar" class="btn btn-primary my-3">Agregar Nuevo Usuario</a>
            
        }
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model[0].id)</th>
                <th>@Html.DisplayNameFor(model => model[0].nombre)</th>
                <th>@Html.DisplayNameFor(model => model[0].apellido)</th>
                <th>@Html.DisplayNameFor(model => model[0].dni)</th>
                <th>@Html.DisplayNameFor(model => model[0].email)</th>
                <th>@Html.DisplayNameFor(model => model[0].rol)</th>
                <th>@Html.DisplayNameFor(model => model[0].avatar)</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr class="@(usuario.estado == 0 ? "table-danger" : "")">
                    <td>@Html.DisplayFor(modelItem => usuario.id)</td>
                    <td>@Html.DisplayFor(modelItem => usuario.nombre)</td>
                    <td>@Html.DisplayFor(modelItem => usuario.apellido)</td>
                    <td>@Html.DisplayFor(modelItem => usuario.dni)</td>
                    <td>@Html.DisplayFor(modelItem => usuario.email)</td>
                    <td>@Html.DisplayFor(modelItem => usuario.rol)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(usuario.avatar))
                        {
                            <img src="@usuario.avatar" alt="Avatar de usuario" style="max-width: 50px; max-height: 50px;" class="img-thumbnail" />
                        }
                    </td>
                    <td>
                        @if (usuario.estado == 1)
                        {
                            <span class="text-success">Activo</span>
                        }
                        else
                        {
                            <span class="text-danger">Inactivo</span>
                        }
                    </td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            @if (usuario.estado == 1)
{
                                @if (usuario.rol != "Admin" || usuario.email == User.Identity.Name)
                                {
                                    <a asp-action="Editar" asp-route-id="@usuario.id" class="btn btn-warning btn-sm">Editar</a>
                                }

                                @if (usuario.rol != "Admin" && usuario.email != User.Identity.Name)
                                {
                                    <a asp-action="Eliminar" asp-route-id="@usuario.id" class="btn btn-danger btn-sm">Desactivar</a>
                                }
                            }
                            else
                            {
                                <a asp-action="Activar" asp-route-id="@usuario.id" class="btn btn-success btn-sm">Activar</a>
                            }
                        }
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>