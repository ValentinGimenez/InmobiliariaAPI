@model IEnumerable<_net_integrador.Models.Contrato>

@{
    ViewData["Title"] = "Contratos";
}

<div class="text-center">
    <h1 class="display-4">Lista de Contratos</h1>
</div>

<p>
    <a class="btn btn-success" asp-action="Agregar">Agregar Contrato</a>
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Volver</a>
</p>

<form asp-action="Index" asp-controller="Contrato" method="get" class="mb-4 p-3 border rounded shadow-sm">
    <h5 class="mb-3">Filtros de Contratos</h5>
    <div class="row g-3 align-items-end">
        
        <div class="col-md-3">
            <label for="diasVencimiento" class="form-label">Vencen en:</label>
            @{
                int? dias = ViewBag.DiasVencimiento;
            }
            <select name="diasVencimiento" id="diasVencimiento" class="form-select">
                <option value="" selected="@(!dias.HasValue)">--- Seleccione Plazo ---</option>
                <option value="30" selected="@(dias == 30)">30 Días</option>
                <option value="60" selected="@(dias == 60)">60 Días</option>
                <option value="90" selected="@(dias == 90)">90 Días</option>
            </select>
            </div>

        <div class="col-md-1 d-flex justify-content-center align-items-center">
            <span class="text-muted">Ó</span>
        </div>

        <div class="col-md-3">
            <label for="fechaInicio" class="form-label">Rango Inicio:</label>
            <input type="date" name="fechaInicio" class="form-control" 
                   value="@ViewBag.FechaInicio" />
        </div>
        
        <div class="col-md-3">
            <label for="fechaFin" class="form-label">Rango Fin:</label>
            <input type="date" name="fechaFin" class="form-control" 
                   value="@ViewBag.FechaFin" />
        </div>
        
        <div class="col-md-2 d-flex flex-column gap-2">
            <button type="submit" class="btn btn-primary w-100">Buscar</button>
            <a href="@Url.Action("Index", "Contrato")" class="btn btn-secondary w-100">Limpiar Filtro</a>
        </div>
    </div>
</form>

<table class="table table-striped" id="tablaContratos">
    <thead>
        <tr>
            <th>Código</th>
            <th>Inquilino</th>
            <th>Inmueble</th>
            <th>Monto Mensual</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            @if(c.Inquilino?.estado!=0)
            {
                <tr>
                    <td>@c.id</td>
                    <td>@c.Inquilino?.nombre @c.Inquilino?.apellido</td>
                    <td>@c.Inmueble?.direccion</td>
                    <td>@c.monto_mensual?.ToString("C", new System.Globalization.CultureInfo("es-AR"))</td>
                    <td>@c.fecha_inicio?.ToString("dd/MM/yyyy")</td>
                    <td>@c.fecha_fin?.ToString("dd/MM/yyyy")</td>
                    
                    <td>
                        @if (c.estado == 1)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else if (c.estado == 2)
                        {
                            <span class="badge bg-warning text-dark">Finalizado</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Cancelado</span>
                        }
                    </td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            @Html.ActionLink("Auditoria", "Detalles", new { id = c.id }, new { @class = "btn btn-info btn-sm" })
                        }
                        @Html.ActionLink("Renovar", "Renovar", new { id = c.id }, new { @class = "btn btn-danger btn-sm" })
                        
                        @if (c.estado == 1)
                        {
                        @Html.ActionLink("Editar", "Editar", new { id = c.id }, new { @class = "btn btn-primary btn-sm" })

                            @Html.ActionLink("Cancelar", "Cancelar", new { id = c.id }, new { @class = "btn btn-warning btn-sm" })
                        }
                        @Html.ActionLink("Pagos", "Index", "Pago", new { contratoId = c.id }, new { @class = "btn btn-danger btn-sm" })
                        
                    </td>
                </tr>
            }
           
        }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    

    <script>
        $(document).ready(function () {
            $('#tablaContratos').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.3/i18n/es-ES.json" 
                },
                "columnDefs": [
                    { "orderable": false, "targets": 7 } 
                ]
            });
        });
    </script>
}